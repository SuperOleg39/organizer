/*==========================================================================*\
    #Общие стили, переменные, функции
\*==========================================================================*/

@import "libs/reset.css"
@import "libs/lato.css"

base-font-size = 14px

rem(value)
	type = unit(value)
	if type == px
		return unit(value / base-font-size, 'rem')
	else
		return unit(value, type)


*, *::after, *::before
	box-sizing border-box
	user-select none
	cursor default

html
	font-family 'Lato', Helvetica, sans-serif
	font-size base-font-size
	font-weight 400
	color #4c4c4c
	width 100%
	height 100%
body
	position relative
	width 100%
	height 100%
	min-width 1030px
	min-height 640px
	padding 15px
	overflow auto
	background-color #F1F1F1

.clearfix::after
	content ''
	display block
	clear both
.pull-left
	float left
.pull-right
	float right


/*==========================================================================*\
    #Window
\*==========================================================================*/

.window
	position relative
	margin 0 auto
	top 50%
	transform translateY(-50%)
	width 100%
	max-width 1350px
	min-width 1000px
	min-height 610px
	.header
		background-color rgba(42, 42, 42, .75)
		line-height 30px
		color white
		position absolute
		top 0
		left 0
		right 0
		.window-icon
			background rgb(64, 68, 182) url('../img/icon-calendar.png') center no-repeat
			width 30px
			height 30px
			float left
			margin-right 15px
		.window-name
			white-space nowrap
		.buttons
			height 30px
			float right
			padding-left 20px
			padding-right 5px
			padding-top 5px
			> div
				background url('../img/buttons.png') left -24px center no-repeat
				width 20px
				height 20px
				float left
				margin-left 10px
				cursor pointer
			.minimize
				background-position left 5px center
			.close
				background-position right 5px center
	.main
		position absolute
		top 30px
		left 0
		right 0
		bottom 0
		display flex
		align-items stretch
		justify-content flex-start
		flex-direction row
		left 0
		right 0
		bottom 0
		.sidebar
			width 230px
			background-color #fff
			flex 0 0 230px
			height 100%
			border-right 1px solid rgb(218, 224, 230)
			overflow-x hidden
			overflow-y auto
		.content
			background-color white
			flex 1 1 0
			height 100%
			overflow auto


/*==========================================================================*\
    #Sidebar
\*==========================================================================*/

.sidebar
	/* Календарь */
	@import "small-calendar.styl"
	/* Меню модулей */
	@import "modules-nav.styl"
	/* Список календарей */
	@import "calendar-list.styl"


/*==========================================================================*\
    #Sidebar
\*==========================================================================*/

.content
	/* Большой календарь */
	@import "big-calendar.styl"
	/* События */
	@import "event-plugin.styl"