.calendar-list
    padding-top 20px
    .ul-title
        position relative
        padding 0 15px 0 35px
        background url('../img/arrow-up.png') left 15px center no-repeat
        font-size 13px
        color #4c4c4c
        line-height 22px
        cursor pointer
    ul
        padding 0 15px 0 35px
        margin-bottom 10px
    li
        position relative
        padding-left 22px
        font-size 12px
        color #767676
        line-height 22px
        cursor pointer
        text-overflow ellipsis
        overflow hidden
        white-space nowrap
        &::before
            content ''
            display block
            position absolute
            left 7px
            top 50%
            transform translateY(-50%)
            width 8px
            height 8px
            background-color #3e3eff
            border-radius 50%